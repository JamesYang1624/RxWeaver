<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.github.qingmei2.activity.MainActivity">

	<Button
		android:id="@+id/mBtnSimpleError"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="简单的全局异常处理Toast" />

	<Button
		android:id="@+id/mBtnConnectError"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="连接超时异常，弹出一个Dialog重试" />

	<Button
		android:id="@+id/mBtnTokenExpired"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="token失效处理" />

	<Button
		android:id="@+id/mBtnMultiTokenExpired"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="同时多个异步请求，token失效的处理" />
</LinearLayout>